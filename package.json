{
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "install": "pnpm build",
    "prepare": "git-validator install",
    "release": "changeset publish",
    "style": "git-validator",
    "style:update": "git-validator -u",
    "test": "pnpm -r test && pnpm style"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.7",
    "git-validator": "workspace:*",
    "globstar": "1.0.0",
    "typescript": "5.5.3"
  },
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": "^8.0.0"
  }
}
